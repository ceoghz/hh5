.infodetail {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}
.infodetail-content {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #FFFFFF;
}
.infodetail-content-head {
  width: 100%;
  border-top: 2rpx solid #f4f4f4;
  background-color: #FFFFFF;
}
.infodetail-content-head > view:first-child {
  font-size: 36rpx;
  color: #333333;
  line-height: 50rpx;
  margin-top: 18rpx;
  width: 80%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.infodetail-content-head > view:last-child {
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  margin: 10rpx 0;
}
.infodetail-content-main {
  border-top: 2rpx solid #f4f4f4;
  min-height: 225rpx;
  overflow: hidden;
  padding-top: 12rpx;
}
.infodetail-content-main > text {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
}

