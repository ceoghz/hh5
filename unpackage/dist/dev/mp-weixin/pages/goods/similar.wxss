.similar {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}
.similar-content {
  width: 100%;
  background: #f4f4f4;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 30rpx;
}
.similar-content-top {
  width: 100%;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  background-color: #FFFFFF;
  margin-top: 20rpx;
}
.similar-content-top image {
  width: 200rpx;
  height: 200rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  margin: 20rpx;
}
.similar-content-top-r {
  width: calc(100% - 200rpx);
  margin: 20rpx 20rpx 20rpx 0;
}
.similar-content-top-r .product-name {
  width: 100%;
  line-clamp: 2;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.similar-content-top-r .shop-name {
  width: 100%;
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}
.similar-content-top-r .price {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.similar-content-top-r .go-buy {
  width: 200rpx;
  height: 60rpx;
  background: -webkit-linear-gradient(323deg, #FD8A03 0%, #FD5700 100%);
  background: linear-gradient(127deg, #FD8A03 0%, #FD5700 100%);
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  color: #FFFFFF;
}
.similar-content-main {
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.similar-content-main .similar-product-list {
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  background: #FFFFFF;
  width: 336rpx;
  margin-bottom: 20rpx;
}
.similar-content-main .similar-product-list image {
  height: 336rpx;
  width: 336rpx;
  -webkit-border-radius: 20rpx 20rpx 0 0;
          border-radius: 20rpx 20rpx 0 0;
}
.similar-content-main .similar-product-list > view {
  margin: 20rpx;
}
.similar-content-main .similar-product-list .pro-name {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.similar-content-main .similar-product-list .shop {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}

