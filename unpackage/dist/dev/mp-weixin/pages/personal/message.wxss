.message {
  height: 100%;
  width: 100%;
  background: #F4F4F4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.message .message-header {
  width: 100%;
}
.message .message-header-main {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-top: 2rpx solid #F4F4F4;
  background: #FFFFFF;
  height: 74rpx;
}
.message .message-header-main .unread,
.message .message-header-main .remov {
  font-size: 24rpx;
  color: #666666;
  line-height: 34px;
}
.message .message-header-main .enit {
  color: #333333;
}
.message-content {
  width: 100%;
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.message-content .message-list-item {
  width: 100%;
  height: 148rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 2rpx solid #F4F4F4;
  background-color: #FFFFFF;
}
.message-content .message-list-item .radio {
  margin-left: 30rpx;
}
.message-content .message-list-item-left {
  height: 100rpx;
  width: 100rpx;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  margin-left: 30rpx;
}
.message-content .message-list-item-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: calc(100% - 100rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.message-content .message-list-item-right .item-name {
  width: 100%;
}
.message-content .message-list-item-right .item-name > view:first-child {
  width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.message-content .message-list-item-right .item-content {
  width: 100%;
  margin-top: 20rpx;
}
.message-content .message-list-item-right .item-content .a {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 426rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.message .message-footer {
  width: 100%;
  height: 108rpx;
  background: #FFFFFF;
  border-top: 2rpx solid #979797;
  position: fixed;
  left: 0;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.message .message-footer .radio {
  margin-left: 30rpx;
}
.message .message-footer .btt {
  width: 208rpx;
  height: 80rpx;
  background: -webkit-linear-gradient(323deg, #FD8A03 0%, #FD5700 100%);
  background: linear-gradient(127deg, #FD8A03 0%, #FD5700 100%);
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  padding: 0;
  margin: 0 30rpx 0 0;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  border: none;
  letter-spacing: 6rpx;
}

