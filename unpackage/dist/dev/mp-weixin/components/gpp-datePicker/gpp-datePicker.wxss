.gpp-datePicker {
  position: relative;
  z-index: 999;
}
.gpp-datePicker .g-dp-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  visibility: hidden;
  opacity: 0;
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
}
.gpp-datePicker .g-dp-mask.show {
  visibility: visible;
  opacity: 1;
}
.gpp-datePicker .g-dp-content {
  position: fixed;
  z-index: 1001;
  bottom: 0;
  right: 0;
  width: 100%;
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
}
.gpp-datePicker .g-dp-content .g-dp-ctt-head {
  height: 88rpx;
  background-color: #FFFFFF;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.gpp-datePicker .g-dp-content .g-dp-ctt-head .g-dp-ctt-hd-btn {
  color: #888;
  font-size: 17px;
}
.gpp-datePicker .g-dp-content .g-dp-ctt-wrapper {
  height: 480rpx;
  width: 100%;
  background-color: #FFFFFF;
}
.gpp-datePicker .g-dp-content .g-dp-ctt-wrapper .g-dp-ctt-wp-item {
  text-align: center;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}
.gpp-datePicker .g-dp-content.show {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.gpp-datePicker picker-view-column {
  height: 480rpx !important;
